package com.hrm.attendance;
import java.time.LocalDateTime;
import java.util.List;

import org.apache.ibatis.annotations.Insert;
import org.apache.ibatis.annotations.Mapper;
import org.apache.ibatis.annotations.Param;
import org.apache.ibatis.annotations.Select;
import org.apache.ibatis.annotations.Update;

@Mapper
public interface AttendanceDAO {
	
	 @Select("select * from em_info where userid = #{userid}")
	 Attendance attend(int userid);
	 
	 @Select("select * from em_att where column = userid")
	 List<Attendance> view();
	 
	 @Insert("insert into em_att(userid, checkTime) values(#{userid}, #{checkInTime})")
	 int insert(Attendance saveatt);
	 
	 @Update("update em_data set checktime = #{checktime} where userid = #{userid}")
	 void updateCheckTime(@Param("userid") String userId, @Param("checktime") String checkTime);
	 
}
